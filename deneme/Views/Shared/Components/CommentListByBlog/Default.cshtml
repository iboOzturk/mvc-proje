@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">

    @if (Model.Count() > 0 )
    {
        <h4>
            Yorumlar
        </h4>
    }
    @if (@Model.Count() == 0)
    {
        <h4>İlk yorum yazan siz olun...</h4>
    }






    @foreach (var item in Model)
    {
        if (item.CommentStatus)
        {
            <div class="media">

                <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>

            </div>
        }
    }
</div>
@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">

                            <div >
                                <img src="@item.BlogImage" style="object-fit: cover; width: 100%; height: 300px;" />
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    @(((DateTime)item.BlogCreateDate).ToString("dd MMM yyyy"))
                                </span>
                                <small class="text-muted">@item.Category.CategoryName</small>
                                <a href="/Blog/BlogReadAll/@item.BlogID" class="product-name"> @item.BlogTitle</a>



                                <div class="small m-t-xs">
                                    <p class="card-text mb-3">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 120).LastIndexOf(" "))... </p>
                                </div>
                                <div class="d-flex justify-content-between m-t">
                                    <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-xs btn-outline btn-primary">Daha Fazla <i class="fa fa-long-arrow-right"></i> </a>

                                    <a href="/Admin/AdminBlog/SwitchBlogStatus/@item.BlogID" class="@(item.BlogStatus?"btn btn-xs btn-outline btn-warning" :"btn btn-xs btn-outline btn-primary")">
                                        @(item.BlogStatus? "Pasif Yap":"Aktif Yap") </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>

</body>

</html>
